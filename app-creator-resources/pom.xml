	<modelVersion>4.0.0</modelVersion>
	<groupId>app.creator.resources</groupId>
	<artifactId>app-creator-resources</artifactId>
	<version>1.0-SNAPSHOT</version>
	<name>AppCreatorResources</name>

	<properties>
